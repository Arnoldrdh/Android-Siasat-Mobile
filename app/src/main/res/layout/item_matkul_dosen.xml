<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvNamaMatkul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Mata Kuliah"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSksMatkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 SKS"
        android:textSize="14sp"
        android:textColor="#475569"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaMatkul"
        app:layout_constraintStart_toStartOf="parent" />

    <!--  Tombol Lihat Nilai -->
    <Button
        android:id="@+id/btnLihatNilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Nilai"
        android:textAllCaps="false"
        android:backgroundTint="#0EA5E9"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSksMatkul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Tombol Beri Nilai -->
    <Button
        android:id="@+id/btnBeriNilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beri Nilai"
        android:backgroundTint="#10B981"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSksMatkul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
